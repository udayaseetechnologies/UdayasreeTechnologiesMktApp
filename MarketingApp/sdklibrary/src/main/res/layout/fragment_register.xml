<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.signin.RegisterFragment">

    <ScrollView
            android:layout_above="@id/frag_reg_register_action"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_margin="@dimen/padding_5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <com.udayasreetechnologies.utilitylibrary.customuiview.USTextView
                    android:text="Personal Details*"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:padding="@dimen/padding_3dp"
                    app:typefaceTextView="title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView
                    app:cardElevation="@dimen/padding_5dp"
                    app:cardCornerRadius="@dimen/padding_5dp"
                    android:layout_margin="@dimen/padding_5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginStart="@dimen/padding_3dp"
                        android:layout_marginEnd="@dimen/padding_3dp"
                        android:layout_marginTop="@dimen/padding_10dp"
                        android:layout_marginBottom="@dimen/padding_10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <LinearLayout
                            android:weightSum="2"
                            android:layout_marginBottom="@dimen/padding_10dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">
                            <com.udayasreetechnologies.utilitylibrary.customuiview.USEditText
                                    android:id="@+id/frag_reg_fname_id"
                                    android:hint="First Name*"
                                    android:paddingStart="@dimen/padding_5dp"
                                    android:paddingEnd="@dimen/padding_5dp"
                                    android:inputType="textPersonName"
                                    app:typefaceEditText="regular"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">
                            <com.udayasreetechnologies.utilitylibrary.customuiview.USEditText
                                    android:id="@+id/frag_reg_lname_id"
                                    android:hint="Last Name*"
                                    android:paddingStart="@dimen/padding_5dp"
                                    android:paddingEnd="@dimen/padding_5dp"
                                    android:inputType="textPersonName"
                                    app:typefaceEditText="regular"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <com.udayasreetechnologies.utilitylibrary.customuiview.USEditText
                                android:id="@+id/frag_reg_mobile_id"
                                android:hint="Mobile Number*"
                                android:paddingStart="@dimen/padding_5dp"
                                android:paddingEnd="@dimen/padding_5dp"
                                android:inputType="phone"
                                app:typefaceEditText="regular"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <View
                    android:background="@color/color_gray"
                    android:layout_marginTop="@dimen/padding_20dp"
                    android:layout_marginBottom="@dimen/padding_20dp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_2dp"/>

            <com.udayasreetechnologies.utilitylibrary.customuiview.USTextView
                    android:text="Login Details*"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:padding="@dimen/padding_3dp"
                    app:typefaceTextView="title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView
                    app:cardElevation="@dimen/padding_5dp"
                    app:cardCornerRadius="@dimen/padding_5dp"
                    android:layout_margin="@dimen/padding_5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_margin="@dimen/padding_3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputLayout
                            android:layout_marginTop="@dimen/padding_10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <com.udayasreetechnologies.utilitylibrary.customuiview.USEditText
                                android:id="@+id/frag_reg_email_id"
                                android:hint="Email Id*"
                                android:paddingStart="@dimen/padding_5dp"
                                android:paddingEnd="@dimen/padding_5dp"
                                android:inputType="textEmailAddress"
                                app:typefaceEditText="regular"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                            android:layout_marginTop="@dimen/padding_10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <com.udayasreetechnologies.utilitylibrary.customuiview.USEditText
                                android:id="@+id/frag_reg_password_id"
                                android:hint="Password*"
                                android:paddingStart="@dimen/padding_5dp"
                                android:paddingEnd="@dimen/padding_5dp"
                                android:inputType="textPassword"
                                app:typefaceEditText="regular"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                            android:layout_marginTop="@dimen/padding_10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <com.udayasreetechnologies.utilitylibrary.customuiview.USEditText
                                android:id="@+id/frag_reg_retype_password_id"
                                android:hint="Retype Password*"
                                android:paddingStart="@dimen/padding_5dp"
                                android:paddingEnd="@dimen/padding_5dp"
                                android:inputType="textPassword"
                                app:typefaceEditText="regular"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <View
                    android:background="@color/color_gray"
                    android:layout_marginTop="@dimen/padding_20dp"
                    android:layout_marginBottom="@dimen/padding_20dp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_2dp"/>

            <com.udayasreetechnologies.utilitylibrary.customuiview.USTextView
                    android:text="Shipping Address"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:padding="@dimen/padding_3dp"
                    app:typefaceTextView="title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            <androidx.cardview.widget.CardView
                    app:cardElevation="@dimen/padding_5dp"
                    app:cardCornerRadius="@dimen/padding_5dp"
                    android:layout_margin="@dimen/padding_5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_margin="@dimen/padding_3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputLayout
                            android:layout_marginTop="@dimen/padding_10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <com.udayasreetechnologies.utilitylibrary.customuiview.USEditText
                                android:id="@+id/frag_reg_address1_id"
                                android:hint="Address 1*"
                                android:paddingStart="@dimen/padding_5dp"
                                android:paddingEnd="@dimen/padding_5dp"
                                android:inputType="textPersonName"
                                app:typefaceEditText="regular"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                            android:layout_marginTop="@dimen/padding_10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <com.udayasreetechnologies.utilitylibrary.customuiview.USEditText
                                android:id="@+id/frag_reg_address2_id"
                                android:hint="Address 2"
                                android:paddingStart="@dimen/padding_5dp"
                                android:paddingEnd="@dimen/padding_5dp"
                                android:inputType="textPersonName"
                                app:typefaceEditText="regular"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                            android:layout_marginTop="@dimen/padding_10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <com.udayasreetechnologies.utilitylibrary.customuiview.USEditText
                                android:id="@+id/frag_reg_landmark_id"
                                android:hint="Landmark*"
                                android:paddingStart="@dimen/padding_5dp"
                                android:paddingEnd="@dimen/padding_5dp"
                                android:inputType="textPersonName"
                                app:typefaceEditText="regular"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                            android:layout_marginTop="@dimen/padding_10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <com.udayasreetechnologies.utilitylibrary.customuiview.USEditText
                                android:id="@+id/frag_reg_country_id"
                                android:hint="Country*"
                                android:text="India"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:clickable="false"
                                android:editable="false"
                                android:paddingStart="@dimen/padding_5dp"
                                android:paddingEnd="@dimen/padding_5dp"
                                android:inputType="textPersonName"
                                app:typefaceEditText="regular"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                            android:layout_marginTop="@dimen/padding_10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <com.udayasreetechnologies.utilitylibrary.customuiview.USEditText
                                android:id="@+id/frag_reg_state_id"
                                android:hint="State/Region*"
                                android:paddingStart="@dimen/padding_5dp"
                                android:paddingEnd="@dimen/padding_5dp"
                                android:inputType="textPersonName"
                                app:typefaceEditText="regular"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                            android:layout_marginTop="@dimen/padding_10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <com.udayasreetechnologies.utilitylibrary.customuiview.USEditText
                                android:id="@+id/frag_reg_city_id"
                                android:hint="City/Town*"
                                android:paddingStart="@dimen/padding_5dp"
                                android:paddingEnd="@dimen/padding_5dp"
                                android:inputType="textPersonName"
                                app:typefaceEditText="regular"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                            android:layout_marginTop="@dimen/padding_10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <com.udayasreetechnologies.utilitylibrary.customuiview.USEditText
                                android:id="@+id/frag_reg_postalcode_id"
                                android:hint="Postal Code*"
                                android:paddingStart="@dimen/padding_5dp"
                                android:paddingEnd="@dimen/padding_5dp"
                                android:inputType="number"
                                app:typefaceEditText="regular"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <com.udayasreetechnologies.utilitylibrary.customuiview.USTextView
                    android:id="@+id/frag_reg_login_action"
                    android:text="Already have account ?"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/padding_20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>

    <com.udayasreetechnologies.utilitylibrary.customuiview.USButton
            android:id="@+id/frag_reg_register_action"
            android:text="Register"
            android:background="@drawable/rect_login"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
</RelativeLayout>