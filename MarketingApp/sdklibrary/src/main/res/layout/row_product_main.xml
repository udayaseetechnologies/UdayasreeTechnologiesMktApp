<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/padding_5dp"
        app:cardElevation="@dimen/padding_5dp">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:id="@+id/row_productlist_image_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_product_placeholder" />

        <com.udayasreetechnologies.utilitylibrary.customuiview.USTextView
                android:id="@+id/row_productlist_title_id"
                android:layout_below="@+id/row_productlist_image_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/padding_5dp"
                android:paddingEnd="@dimen/padding_5dp"
                android:text="@string/product_title"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:typefaceTextView="title" />

        <com.udayasreetechnologies.utilitylibrary.customuiview.USTextView
                android:id="@+id/row_productlist_price"
                android:layout_below="@+id/row_productlist_title_id"
                android:text="Rs.180/piece"
                android:paddingStart="@dimen/padding_5dp"
                android:paddingEnd="@dimen/padding_5dp"
                app:typefaceTextView="regular"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <com.udayasreetechnologies.utilitylibrary.customuiview.USTextView
                android:id="@+id/row_productlist_addtocart_aciton"
                android:layout_below="@+id/row_productlist_price"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:padding="@dimen/padding_5dp"
                android:background="@color/colorAccent"
                android:textColor="@color/color_white"
                android:layout_marginTop="@dimen/padding_2dp"
                android:drawableEnd="@drawable/ic_cart_24dp"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:text="@string/add_to_cart"
                app:typefaceTextView="regular" />

        <ImageView
                android:id="@+id/row_productlist_wishlist_action"
                android:background="@drawable/ic_unwishllist_24dp"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/padding_10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>