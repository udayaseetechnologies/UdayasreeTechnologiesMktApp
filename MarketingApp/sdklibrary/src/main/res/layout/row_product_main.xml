<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_5dp"
        app:cardCornerRadius="@dimen/padding_5dp"
        app:cardElevation="@dimen/padding_5dp">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:id="@+id/row_productlist_image_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_product_placeholder" />

        <com.udayasreetechnologies.utilitylibrary.customuiview.USTextView
                android:id="@+id/row_productlist_title_id"
                android:layout_below="@+id/row_productlist_image_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_10dp"
                android:paddingStart="@dimen/padding_5dp"
                android:paddingEnd="@dimen/padding_5dp"
                android:text="@string/product_title"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:typefaceTextView="title" />

        <LinearLayout
                android:layout_below="@+id/row_productlist_title_id"
                android:weightSum="2"
                android:gravity="center"
                android:padding="@dimen/padding_2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <com.udayasreetechnologies.utilitylibrary.customuiview.USTextView
                    android:id="@+id/row_productlist_price"
                    android:text="Rs.180/piece"
                    app:typefaceTextView="regular"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            <com.udayasreetechnologies.utilitylibrary.customuiview.USTextView
                    android:id="@+id/row_productlist_addtocart_aciton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableEnd="@drawable/ic_cart_24dp"
                    android:gravity="center_vertical"
                    android:text="@string/add_to_cart"
                    app:typefaceTextView="regular" />
        </LinearLayout>
        <ImageView
                android:src="@drawable/ic_wishlist_24dp"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/padding_2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>