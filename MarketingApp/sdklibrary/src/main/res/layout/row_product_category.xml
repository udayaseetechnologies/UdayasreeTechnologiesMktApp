<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_margin="@dimen/padding_5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <com.udayasreetechnologies.utilitylibrary.customuiview.CircleImageView
            android:id="@+id/row_product_category_image"
            app:civ_border_color="@color/color_gray"
            app:civ_border_width="@dimen/padding_2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <com.udayasreetechnologies.utilitylibrary.customuiview.USTextView
            android:id="@+id/row_product_category_title"
            android:text="Category"
            app:typefaceTextView="description"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
</LinearLayout>