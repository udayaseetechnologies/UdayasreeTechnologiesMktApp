<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/padding_5dp"
        app:cardElevation="@dimen/padding_5dp">

    <LinearLayout
            android:id="@+id/row_categorylist_container_action"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:id="@+id/row_categorylist_image_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_product_placeholder" />
        <com.udayasreetechnologies.utilitylibrary.customuiview.USTextView
                android:id="@+id/row_categorylist_title_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_5dp"
                android:gravity="center"
                android:text="@string/product_title"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:typefaceTextView="title" />

    </LinearLayout>

</androidx.cardview.widget.CardView>