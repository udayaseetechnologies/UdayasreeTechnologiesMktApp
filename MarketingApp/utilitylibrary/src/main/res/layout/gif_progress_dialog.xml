<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">

    <com.udayasreetechnologies.utilitylibrary.customuiview.gifView.GIFImageView
            android:id="@+id/gif_progress_imageview"
            android:scaleType="fitCenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

    <com.udayasreetechnologies.utilitylibrary.customuiview.USTextView
            android:id="@+id/gif_progress_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:maxLines="1"
            android:text="Loading"
            android:layout_marginTop="20dp"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
</LinearLayout>